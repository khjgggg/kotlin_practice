<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked 상태: #FB7A25 색상의 경계 표시 -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="#ffffff" />
            <stroke android:width="1dp" android:color="#FB7A25" />
        </shape>
    </item>
    <!-- Unchecked 상태: #c8c8c8 색상의 경계 표시 -->
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#c8c8c8" />
                </shape>
            </item>
            <item android:end="1dp"
                android:top="1dp"
                android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#ffffff" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
